<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background">


    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28sp"
        android:layout_marginTop="111.6sp"
        android:layout_marginEnd="189sp"
        android:layout_marginBottom="633sp"
        android:fontFamily="@font/montserrat_bold"
        android:text="Inicie Sesión"
        android:textColor="#000000"
        android:textSize="22sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
    />


    <EditText
        android:id="@+id/editTextcorreoElectronico"
        android:layout_width="280sp"
        android:layout_height="40sp"
        android:layout_marginStart="40sp"
        android:layout_marginTop="223sp"
        android:layout_marginEnd="40sp"
        android:layout_marginBottom="497sp"
        android:background="@drawable/roundedtextbox"
        android:ems="10"
        android:fontFamily="@font/montserrat_regular"
        android:hint="correo@ejemplo.com"
        android:importantForAutofill="no"
        android:inputType="textEmailAddress"
        android:lines="1"
        android:maxLines="1"
        android:textColor="@color/textview_selector"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <com.google.android.material.textfield.TextInputLayout

        android:id="@+id/textInputLayout"
        android:layout_width="280sp"
        android:layout_height="40sp"
        android:layout_marginStart="40sp"
        android:layout_marginTop="299sp"
        android:layout_marginEnd="40sp"
        android:layout_marginBottom="397sp"
        android:background="@drawable/roundedtextbox"
        android:gravity="center"
        app:boxStrokeColor="#9E9E9E"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:passwordToggleEnabled="true">

        <EditText
            android:layout_width="280sp"
            android:layout_height="40sp"
            android:ems="5"
            android:fontFamily="@font/montserrat_regular"
            android:inputType="textPassword"
            android:text="password"
            android:textColor="#9E9E9E"
            android:textSize="16sp" />
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/textViewCorreoElectrónico"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="56sp"
        android:layout_marginTop="274sp"
        android:layout_marginEnd="182sp"
        android:layout_marginBottom="477sp"
        android:fontFamily="@font/montserrat_regular"
        android:text="Correo Electrónico"
        android:textColor="#000000"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewcontraseña"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="84sp"
        android:layout_marginTop="8sp"
        android:fontFamily="@font/montserrat_regular"
        android:text="Contraseña"
        android:textColor="#000000"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textInputLayout" />

    <Button
        android:id="@+id/textViewOlvidasteContraseña"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="189sp"
        android:layout_marginTop="378sp"
        android:layout_marginEnd="40sp"
        android:layout_marginBottom="379sp"
        android:background="@android:color/transparent"
        android:fontFamily="@font/montserrat_regular"
        android:text="Olvidaste tu contraseña?"
        android:textAllCaps="false"
        android:textColor="#000000"
        android:textSize="10sp"
        app:layout_constraintBottom_toTopOf="@+id/buttonLogin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.561"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.043" />

    <Button
        android:id="@+id/buttonLogin"
        android:layout_width="280sp"
        android:layout_height="44sp"
        android:layout_marginStart="40sp"
        android:layout_marginTop="412sp"
        android:layout_marginEnd="40sp"
        android:layout_marginBottom="108sp"
        android:background="@drawable/buttoniniciarsesion"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.509"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="79sp"
        android:layout_marginEnd="79sp"
        android:layout_marginBottom="52sp"
        android:fontFamily="@font/montserrat_regular"
        android:text="¿Aún no tienes una cuenta?"
        android:textColor="#000000"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.25"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/buttonregistrar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4sp"
        android:layout_marginBottom="34sp"
        android:background="@android:color/transparent"
        android:fontFamily="@font/montserrat_semibold"
        android:text="Regístrate"
        android:textColor="#000000"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView" />

    <TextView
        android:id="@+id/textViewConectarmeCon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="46sp"
        android:layout_marginTop="488sp"
        android:layout_marginEnd="47sp"
        android:text="Conectarme con"
        android:fontFamily="@font/montserrat_regular"
        android:textColor="#000000"
        android:textSize="10sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/imageButton2"
        android:layout_width="26sp"
        android:layout_height="26sp"
        android:layout_marginTop="537dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="199dp"
        android:adjustViewBounds="true"
        android:background="@android:color/transparent"
        android:scaleType="centerInside"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/imageButton3"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.451"
        app:srcCompat="@drawable/logogoogleplus" />

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="24sp"
        android:layout_height="24sp"
        android:layout_marginStart="117dp"
        android:layout_marginTop="537dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="199dp"
        android:adjustViewBounds="true"
        android:background="@android:color/transparent"
        android:scaleType="centerInside"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/imageButton2"
        app:layout_constraintHorizontal_bias="0.921"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.482"
        app:srcCompat="@drawable/logofacebook" />

    <ImageButton
        android:id="@+id/imageButton3"
        android:layout_width="24sp"
        android:layout_height="24sp"
        android:layout_marginStart="218dp"
        android:layout_marginTop="537dp"
        android:layout_marginEnd="118dp"
        android:layout_marginBottom="199dp"
        android:adjustViewBounds="true"
        android:background="@android:color/transparent"
        android:scaleType="centerInside"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.313"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.482"
        app:srcCompat="@drawable/logotwitter" />

</androidx.constraintlayout.widget.ConstraintLayout>